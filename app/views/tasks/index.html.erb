<h1>一覧</h1>

<% if @tasks.any? %>
 <table class="table table-striped">
     <thead>
         <tr>
            <th>id</th>
            <th>タイトル</th>
            <th>メッセージ</th>
         </tr>
     </thead>
     <tbody>
         <% @tasks.each do |tasks| %>
             <tr>
                 <td><%= link_to task.id,task %></td>
                 <td><%= task.title %></td>
                 <td><%= task.content %></td>
             </tr>
        <% end %>
     </tbody>
 </table>
 <%= paginate @tasks %>

<%= link_to '新規タスクの登録', new_task_path, class: "btn btn-primary" %>